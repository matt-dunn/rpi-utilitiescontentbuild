<?xml version="1.0" encoding="UTF-8"?>
<project
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.rpi.co.uk/ ../../../../../../vendor/rpi/utilities-contentbuild/Src/RPI/Utilities/ContentBuild/Lib/Configuration/Xml/Model/Schema.xsd"

    xmlns="http://www.rpi.co.uk/" name="website" prefix="TEMPLATE" appRoot="ROOT" basePath="/../../">
    
    <processors>
        <!--<processor type="\RPI\Utilities\ContentBuild\Processors\SASS"/>-->
        <processor type="RPI\Utilities\ContentBuild\Processors\Sprites">
            <param>
                <!--<maxSpriteWidth>60</maxSpriteWidth>-->
            </param>
        </processor>
        <processor type="RPI\Utilities\ContentBuild\Processors\Images"/>
        <processor type="RPI\Utilities\ContentBuild\Processors\SCSSPHP">
            <param>
                <custom>
                    <function name="double" params="$arg">
                        list($type, $value, $unit) = $arg;
                        return array($type, $value*2, $unit);
                    </function>
                    <function name="quad" params="$arg">
                        list($type, $value, $unit) = $arg;
                        return array($type, $value*4, $unit);
                    </function>
                    <function name="bitmore" params="$arg">
                        list($type, $value, $unit) = $arg;
                        return array($type, $value * 1.2, $unit);
                    </function>
                    <function name="customFunction" params="$arg">
                        return array( 'color', 124, 56, 00);
                    </function>
                </custom>
            </param>
        </processor>
    </processors>
    
    <uriResolvers>
        <uriResolver type="RPI\Utilities\ContentBuild\UriResolvers\Composer">
            <param>
                <vendorPath>../../../../../../../../vendor</vendorPath>
            </param>
        </uriResolver>
    </uriResolvers>
    
    <build buildDirectory="" outputDirectory="compiled/css/" type="css" name="core" media="all">
        <files name="View/test.scss"/>
    </build>
</project>
